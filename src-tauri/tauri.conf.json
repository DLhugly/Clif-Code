{
  "$schema": "https://raw.githubusercontent.com/nickt4/tauri-v2-schema/main/tauri.conf.json",
  "productName": "Clif",
  "version": "1.2.0",
  "identifier": "com.clif.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Clif",
        "width": 1400,
        "height": 900,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "longDescription": "Blazing-fast, privacy-first, open-source AI-native code editor built with Tauri 2, SolidJS, and Monaco Editor.",
    "shortDescription": "AI-native code editor",
    "category": "DeveloperTool",
    "copyright": ""
  }
}
